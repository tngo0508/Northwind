@model System.Collections.Generic.IEnumerable<Northwind.EntityModels.Order>
@{
    ViewData["Title"] = "Orders";
}
<div class="text-center">
    <h1 class="display-4">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Company Name</th>
                <th>Country</th>
                <th>Item Count</th>
                <th>Order Total</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Order order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate?.ToString("D")</td>
                    <td>@order.Customer?.CompanyName</td>
                    <td>@order.OrderDetails.Count()</td>
                    <td>@order.OrderDetails.Sum(detail => detail.Quantity * detail.UnitPrice).ToString("C"))</td>
                </tr>
            }
            </tbody>
        </table>
        <a id="endOfTable"/>
    </h1>
</div>